{% set items = simplify_menu('yummy-menu') %}
<nav id="navbar" class="navbar">
    <ul>
        {% for menu_item in items.menu_tree %}
        {% if menu_item.submenu %}
        <li class="dropdown">
            <a href="#" class="">
                <span>{{ menu_item.text }}</span> <i class="bi bi-chevron-down dropdown-indicator"></i>
            </a>
            <ul>
                {% for item in menu_item.submenu %}
                <li class="navigation__item">
                    <a href="{{ item.url }}" class="">{{ item.text }}</a>
                </li>
                {% endfor %}
            </ul>
        </li>
        {% else %}
        <li class="navigation__item">
            <a href="{{ menu_item.url }}" class="">{{ menu_item.text }}</a>
        </li>
        {% endif %}
        {% endfor %}
    </ul>
</nav><!-- .navbar -->